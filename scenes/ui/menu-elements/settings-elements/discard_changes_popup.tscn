[sub_resource type="GDScript" id="GDScript_pvp7f"]
resource_name = "discard_changes_popup"
script/source = "extends PanelContainer

@onready var yesButton: Button = $PopupWindow/MarginContainer/VBoxContainer/HBoxContainer/YesButton
@onready var noButton: Button = $PopupWindow/MarginContainer/VBoxContainer/HBoxContainer/NoButton

@export var parent: Node	## The panel the discard changes popup belongs to


func _ready():
	# Connect necessary signals
	yesButton.connect(\"pressed\", yes_button_pressed)
	noButton.connect(\"pressed\", no_button_pressed)


func yes_button_pressed() -> void:
	# Check if the panel this belongs to has the \"discard changes\" function
	if parent.has_method(\"discard_changes\"):
		parent.discard_changes()
	
	# Disable the panel's apply button
	parent.applyButton.set_disabled(true)
	parent.back_button_pressed()
	hide()


func no_button_pressed() -> void:
	hide()
"

