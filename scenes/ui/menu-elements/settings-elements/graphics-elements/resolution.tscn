resource_name = "resolution"
script/source = "extends HBoxContainer

@onready var options: OptionButton = %Options

@export var defaultValue: String

var selectedId: int
var currentResolution: String = defaultValue

var RESOLUTION_LIST: Dictionary = {
	\"3840x2160\": Vector2i(3840, 2160),
	\"2560x1440\": Vector2i(2560, 1440),
	\"1920x1080\": Vector2i(1920, 1080),
	\"1280x720\": Vector2i(1280, 720),
	\"960x540\": Vector2i(960, 540)
}


func _ready():
	options.connect(\"item_selected\", resolution_selected)
	SettingsDataManager.connect(\"set_default_value\", set_default_value)
	owner.REFERENCE_TABLE[\"resolution\"] = self
	initialize_resolutions()


func _process(_delta):
	if is_visible_in_tree():
		if owner.GRAPHICS_SETTINGS_CACHE[\"displayMode\"] != \"Windowed\":
			if !options.disabled:
				options.set_disabled(true)
		else:
			if options.disabled:
				options.set_disabled(false)


# Add all the resolution options
func initialize_resolutions() -> void:
	var id: int = 0
	
	
	for resolution in RESOLUTION_LIST:
		options.add_item(resolution, id)
		# Select the current resolution
		if resolution == currentResolution:
			options.select(id)
			selectedId = id
		
		id += 1


func resolution_selected(index: int) -> void:
	# Update the resolution in the settings cache
	owner.GRAPHICS_SETTINGS_CACHE[\"resolutions\"] = options.get_item_text(index)
	selectedId = index
	owner.settings_changed()


# Called to apply the settings in the settings cache
func apply_settings() -> void:
	var selected: String = options.get_item_text(selectedId)
	var resolution: Vector2i = RESOLUTION_LIST[selected]
	
	# Update window size and center window
	DisplayServer.window_set_size(resolution)
	get_window().move_to_center()
	
	if owner.GRAPHICS_SETTINGS_CACHE[\"displayMode\"] != \"Windowed\":
		DisplayServer.window_set_size(resolution)


func set_default_value() -> void:
	SettingsDataManager.DEFAULT_SETTINGS[\"graphics\"][\"resolution\"] = defaultValue
"

