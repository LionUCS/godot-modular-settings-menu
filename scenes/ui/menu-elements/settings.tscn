[sub_resource type="GDScript" id="GDScript_eua2a"]
resource_name = "settings"
script/source = "extends Control

signal get_settings
signal clear_cache

@export var isInGameMenu: bool = true	## Used to check if gameplay related settings should be applied

@onready var settingsPanel: VBoxContainer = %SettingsPanel
@onready var settingsTabs: TabContainer = %SettingsTabs
@onready var discardChangesPopup: PanelContainer = %DiscardChangesPopup
@onready var applyButton: Button = %ApplyButton
@onready var elementPanels: Control = %ElementPanels


func back_button_pressed() -> void:
	# Check if there have been any changes made
	if applyButton.is_disabled():
		hide()
		owner.menu.show()
		# Clear the settings cache
		emit_signal(\"clear_cache\")
	else:
		# Display the discard changes popup
		discardChangesPopup.show()


func apply_button_pressed() -> void:
	applyButton.set_disabled(true)
	# Apply the settings of the current section
	settingsTabs.get_child(settingsTabs.current_tab).on_apply_settings()
"

