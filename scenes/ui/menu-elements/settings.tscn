resource_name = "discard_changes_popup"
script/source = "extends PanelContainer


func yes_button_pressed():
	var currentTab: TabBar = owner.settingsTabs.get_child(owner.settingsTabs.current_tab)
	
	for element in currentTab.CHANGED_ELEMENTS:
		currentTab.ELEMENT_REFERENCE_TABLE[element].load_settings()
	
	currentTab.CHANGED_ELEMENTS.clear()
	owner.applyButton.set_disabled(true)
	owner.back_button_pressed()
	hide()


func no_button_pressed():
	hide()
"

